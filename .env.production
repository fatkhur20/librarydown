# Application Settings
APP_NAME="LibraryDown API"
DEBUG=False
VERSION="2.0.0"
API_V1_STR="/api/v1"
RATE_LIMIT_PER_MINUTE=10

# Server Settings (VPS)
MEDIA_FOLDER=media
DATABASE_URL=sqlite:///./librarydown.db
ALLOWED_ORIGINS=["*"]

# Redis Settings (VPS)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Celery Settings (VPS)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_WORKER_CONCURRENCY=2

# Performance Settings (VPS)
SESSION_POOL_SIZE=5
MAX_CONCURRENT_DOWNLOADS=3

# Telegram Bot Configuration
# IMPORTANT: Set these via environment variables for security!
# export TELEGRAM_BOT_TOKEN='your_bot_token_here'
# export TELEGRAM_USER_ID='your_user_id_here'
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_USER_ID=your_user_id_here

# Monitoring Settings
MONITORING_ENABLED=true
MONITORING_INTERVAL=60
LOG_LEVEL=INFO

# Chromium Path (if needed for some platforms)
CHROMIUM_EXECUTABLE_PATH=/usr/bin/chromium-browser
