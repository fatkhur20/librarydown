# Application Settings
APP_NAME="Universal Social Media Downloader"
VERSION="2.0.0"
DEBUG=True
API_V1_STR="/api/v1"
API_BASE_URL="http://localhost:8000"

# Security
ALLOWED_ORIGINS=["*"]  # For production, specify allowed domains
RATE_LIMIT_PER_MINUTE=10  # API rate limit per IP address

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Celery Settings
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Database Settings
DATABASE_NAME=librarydown.db

# File Management
MEDIA_FOLDER=media
FILE_TTL_HOURS=24  # Files will be auto-deleted after 24 hours
MAX_FILE_SIZE_MB=500  # Maximum file size to download

# Task Settings
MAX_RETRIES=3  # Number of retries for failed downloads
RETRY_BACKOFF=5  # Base seconds for exponential backoff

# Platform API Keys (Optional - for future use)
# TWITTER_API_KEY=your_twitter_api_key_here
# TWITTER_API_SECRET=your_twitter_api_secret_here
# INSTAGRAM_SESSION_ID=your_instagram_session_id_here
